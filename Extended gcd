#include <bits/stdc++.h>
using namespace std;
//ax + by = gcd(a,b)
// Extended Euclidean Algorithm
int extended_gcd(int a, int b, int &x, int &y) {
    if (b == 0) {
        x = 1;  // base case
        y = 0;
        return a;
    }
    int x1, y1; 
    int gcd = extended_gcd(b, a % b, x1, y1);

    // Update x and y using results of recursion
    x = y1;
    y = x1 - (a / b) * y1;

    return gcd;
}

int main() {
    int a, b;
    cout << "Enter two numbers: ";
    cin >> a >> b;

    int x, y;
    int g = extended_gcd(a, b, x, y);

    cout << "GCD: " << g << "\n";
    cout << "Coefficients (x, y): " << x << ", " << y << "\n";

    return 0;
}
